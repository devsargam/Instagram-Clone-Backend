// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String  @id @default(uuid())
  email      String  @unique
  username   String  @unique
  password   String
  isVerified Boolean @default(false)

  createdPosts    Post[]           @relation("Created")
  savedPosts      Post[]           @relation("Saved")
  UserPreferences UserPreferences?
}

model Post {
  id        String   @id @default(uuid())
  title     String
  caption   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  author   User   @relation("Created", fields: [authorId], references: [id])
  authorId String

  savedBy User   @relation("Saved", fields: [userId], references: [id])
  userId  String
}

enum AccountType {
  PUBLIC
  PRIVATE
}

model UserPreferences {
  id                      String      @id @default(uuid())
  bio                     String
  receiveMarkettingEmails Boolean     @default(false)
  accountType             AccountType @default(PUBLIC)

  user   User   @relation(fields: [userId], references: [id])
  userId String @unique
}
